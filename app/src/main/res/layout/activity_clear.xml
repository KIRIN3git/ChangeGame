<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context="jp.kirin3.changegame.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="★★★"
            android:textColor="@color/orenge"
            android:textSize="60sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CLEAR!"
            android:textColor="@color/orenge"
            android:textSize="60sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:textSize="30sp"
            android:visibility="gone"
            android:id="@+id/textVestGameTimeMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/forestGreen"
            android:text="ベストタイム更新" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ベストタイム:" />
            <TextView
                android:textSize="30sp"
                android:layout_marginLeft="3dp"
                android:id="@+id/textVestGameTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/forestGreen"
                android:text="0" />
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/forestGreen"
                android:text="sec" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="タイム:" />
            <TextView
                android:textSize="30sp"
                android:layout_marginLeft="3dp"
                android:id="@+id/textGameTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sec" />
        </LinearLayout>

        <Button
            android:textSize="20sp"
            android:id="@+id/buttonTop"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="トップに戻る" />


    </LinearLayout>


</RelativeLayout>
